---
summary: Test guest-setup on RHEL 7

provision:
  how: minute
  image: RHEL-7

prepare:
  - name: pre-artifact-installation
    how: ansible
    playbook: terragrunt/environments/production/worker-public/citool-config/guest-setup/pre-artifact-installation/entrypoint.yaml
    extra-args: "-e IMAGE_NAME=RHEL-7"

discover+:
  how: shell
  tests+:
    - name: Test installed brewkoji package
      test: rpm -qi brewkoji
