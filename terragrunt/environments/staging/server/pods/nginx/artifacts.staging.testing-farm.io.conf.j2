server {
    server_name  artifacts.staging{{ staging_suffix | default("") }}.testing-farm.io;
    add_header Access-Control-Allow-Origin *;

    root /var/artifacts;
    disable_symlinks off;

    location ~ "^.*\.txt\.gz$" {
        root /archive;
        types { } default_type "text/plain gz";
        add_header  Content-Encoding  gzip;
        gzip off;
        rewrite "^(.*)$" $1 break;
    }

    location ~ "^/.*/" {
        autoindex on;
    }

    listen 80;
}
