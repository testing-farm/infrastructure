    - name: c6g.8xlarge-100
      base: c6g.8xlarge
      disk:
          - size: "100 GiB"
          - additional-disks:
                max-count: 5
                min-size: "10 GiB"
                max-size: "512 GiB"

    - name: c6g.8xlarge-250
      base: c6g.8xlarge
      disk:
