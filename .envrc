# Needed for development operations
export TESTING_FARM_DEV_TOKEN_PUBLIC_DEVELOPER="$(ansible-vault view --vault-password-file .vault_pass $SECRETS_FILE | yq -r .credentials.testing_farm.dev.public.users.developer.token)"
