---
summary: Test guest-setup on RHEL 8

provision:
  how: minute
  image: RHEL-8

prepare:
  - name: pre-artifact-installation
    how: ansible
    playbook: ranch/public/citool-config/guest-setup/pre-artifact-installation/entrypoint.yml
    extra-args: "-e IMAGE_NAME=RHEL-8"

discover+:
  how: shell
  tests+:
    - name: Test installed brewkoji package
      test: rpm -qi brewkoji
